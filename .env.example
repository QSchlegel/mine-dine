# Database
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/minedine?schema=public"

# UTXOS Authentication
# Get your project ID from https://utxos.dev/dashboard
NEXT_PUBLIC_UTXOS_PROJECT_ID="your_project_id"
# Network ID: 0 for preprod (testnet), 1 for mainnet
NEXT_PUBLIC_NETWORK_ID="0"

# Stripe Payments
# Get your keys from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
# Get webhook secret from Stripe dashboard webhook settings
STRIPE_WEBHOOK_SECRET="whsec_..."

# App Configuration
# Secret for session management (generate a random string)
NEXTAUTH_SECRET="your-secret-key-here"
# Your app URL (change for production)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# PostHog Analytics
# Get your key from https://app.posthog.com
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
# PostHog host URL (use https://app.posthog.com for cloud or your self-hosted instance)
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# File Upload - Cloudinary (choose one: Cloudinary OR AWS S3)
# Get credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# File Upload - AWS S3 (choose one: Cloudinary OR AWS S3)
# Get credentials from AWS IAM
AWS_S3_BUCKET_NAME="your_bucket_name"
AWS_S3_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_access_key"
AWS_SECRET_ACCESS_KEY="your_secret_key"
